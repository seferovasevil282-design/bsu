{
  "name": "bsu-chat-platform",
  "version": "1.0.0",
  "description": "Bakı Dövlət Universiteti Tələbələri Chat Platforması",
  "main": "backend/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run prisma:generate",
    "build:frontend": "cd frontend && npm run build",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:migrate": "cd backend && npx prisma migrate deploy",
    "postinstall": "npm run prisma:generate"
  },
  "keywords": ["bsu", "chat", "university", "azerbaijan"],
  "author": "BSU Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "@prisma/client": "^5.9.1",
    "dotenv": "^16.4.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "moment-timezone": "^0.5.45"
  },
  "devDependencies": {
    "prisma": "^5.9.1",
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2"
  }
}
